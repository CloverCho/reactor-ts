{
    "name": "reactor-ts",
    "version": "0.0.1",
    "description": "Reactor runtime written in TypeScript",
    "main": "lib/reactor.js",
    "dependencies": {
        "command-line-args": "^5.1.1",
        "got": "^9.6.0",
        "heap": "^0.2.6",
        "microtime": "^3.0.0",
        "nanotimer": "^0.3.15",
        "ulog": "^1.1.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.4.3",
        "@babel/core": "^7.4.3",
        "@babel/node": "^7.2.2",
        "@babel/plugin-proposal-class-properties": "^7.7.4",
        "@babel/plugin-proposal-object-rest-spread": "^7.7.7",
        "@babel/plugin-proposal-optional-chaining": "^7.8.0",
        "@babel/preset-env": "^7.4.3",
        "@babel/preset-typescript": "^7.7.7",
        "@types/jest": "^24.0.15",
        "@types/node": "^13.1.2",
        "jest": "^24.8.0",
        "ts-jest": "^24.0.2",
        "typedoc": "^0.15.5",
        "typescript": "^3.5.3"
    },
    "files": [
        "lib"
    ],
    "scripts": {
        "check-types": "tsc",
        "build": "rm -rf dist && babel src --out-dir dist --extensions .ts",
        "deploy": "npm run build && npm run doc",
        "doc": "typedoc --out docs src",
        "test": "jest --coverage"
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "babelConfig": "<rootDir>/.babelrc"
            }
        },
        "testPathIgnorePatterns": [
            "node_modules",
            "defunct"
        ],
        "roots": [
            "<rootDir>/src",
            "<rootDir>/__tests__"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        }
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:icyphy/reactor-ts.git"
    },
    "keywords": [
        "IoT",
        "framework",
        "timing",
        "determinism",
        "actors"
    ],
    "author": {
        "name": "Marten Lohstroh",
        "email": "marten@berkeley.edu",
        "url": "http://people.eecs.berkeley.edu/~marten"
    },
    "contributors": [
        "Andres Goens",
        "Matt Weber",
        "Ben Zhang"
    ],
    "license": "MIT"
}
